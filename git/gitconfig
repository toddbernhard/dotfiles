[alias]
  a = add -A .
  b = branch
  c = !git a && git commit
  ca = !git a && git commit --amend --no-edit
  cm = !git a && git commit -m
  co = checkout
  d = !git a && git diff --cached
  pm = !git co master && git pull --ff-only && git co -
  s = status --short
  stl = stash list
  stp = stash -p

  amend = !git ca
  ammend = !git ca
  delete-local = branch -D
  delele-remote = push --delete
  new = !git co -b
  pull-master = !git pm

  recent = !git log --pretty=format:'%Cgreen%ad %C(red)%h%Creset - %s' --date=short --reverse --all --since=2.months.ago --author=todd
  tree = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative

[branch]
  autosetuprebase = always

[push]
  default = current

[core]
  autocrlf = input
  editor = vim
  excludesfile = ~/.gitignore_global

# to override settings without putting them in source control, add them to this file
# useful for overriding [user]
[include]
  path = ~/.gitconfig.local

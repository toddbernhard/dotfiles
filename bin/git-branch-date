#!/usr/bin/env bash

normal='\033[0m'
green='\033[0;32m'
yellow='\033[0;33m'
red='\033[0;31m'
seconds_per_day=86400

formatScript='
  refname=%(refname)
  commit_date=%(committerdate:short)
  short_name=`printf "%-30s" %(refname:short)`
  diff_text=%(committerdate:relative)

  most_recent=${most_recent:-$commit_date}  # set on first iteration
  let delt=(`date +%s -d "$most_recent"`-`date +%s -d "$commit_date"`)/$seconds_per_day

  if echo "$refname" | grep -q "refs/remotes"; then
    clr_name="$green"
  else
    clr_name="$normal"
  fi

  if [ "$delt" -lt 8 ]; then
    clr_diff="$normal"
  elif [ "$delt" -lt 31 ]; then
    clr_diff="$green"
  elif [ "$delt" -lt 91 ]; then
    clr_diff="$yellow"
  elif [ "$delt" -lt 366 ]; then
    clr_diff="$red"
  else
    clr_diff="$normal"
  fi

  echo -e "$commit_date\t$clr_name$short_name\t$clr_diff$diff_text$normal"
'

eval=`git for-each-ref --shell --sort='-committerdate' --format="$formatScript" refs/heads refs/remotes`
eval "$eval"
